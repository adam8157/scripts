#!/bin/sh

name=backup-$(date +%y%m%d).tar.7z

if [ -f /media/sdb1/$name ]
then
    if [ "$1" == "-f" ]
    then
        rm -f /media/sdb1/$name
    else
        echo Target file already exists.
        exit 1
    fi
fi

tar cf - -C ~ Scripts -C ~/Backup Dotfiles Firefox -C ~/Documents Tips Note Sign Todo | 7z a -p -si /media/sdb1/$name

exit 0
